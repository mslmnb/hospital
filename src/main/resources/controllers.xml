<?xml version='1.0' encoding='UTF-8'?>

<context>
    <repositories>
        <repository id="patientRepository">
            <class-name>com.epam.hospital.repository.jdbc.JdbcPatientRepositoryImpl</class-name>
        </repository>
        <repository id="userRepository">
            <class-name>com.epam.hospital.repository.jdbc.JdbcUserRepositoryImpl</class-name>
        </repository>
    </repositories>

    <services>
        <service id="patientService" repository="patientRepository">
            <class-name>com.epam.hospital.service.PatientServiceImpl</class-name>
        </service>
        <service id="userService" repository="userRepository">
            <class-name>com.epam.hospital.service.UserServiceImpl</class-name>
        </service>
    </services>

    <controllers>
        <controller id="patientController" service = "patientService">
            <class-name>com.epam.hospital.web.patient.PatientControllerImpl</class-name>
        </controller>
        <controller id="userController" service = "userService">
            <class-name>com.epam.hospital.web.user.UserControllerImpl</class-name>
        </controller>
    </controllers>
</context>