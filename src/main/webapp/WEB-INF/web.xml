<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Hospital</display-name>

    <welcome-file-list>
        <welcome-file>jsp/index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Servlet -->
    <servlet>
        <servlet-name>frontControllerServlet</servlet-name>
        <servlet-class>com.epam.hospital.web.FrontControllerServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>frontControllerServlet</servlet-name>
        <url-pattern>/app/*</url-pattern>
    </servlet-mapping>

    <!-- Filters -->
    <filter>
        <filter-name>resourcesFilter</filter-name>
        <filter-class>com.epam.hospital.web.ResourcesFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>resourcesFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Listners -->
    <listener>
        <listener-class>com.epam.hospital.web.AppServletContextListner</listener-class>
    </listener>

    <!-- Context parameters -->
    <context-param>
        <param-name>driverName</param-name>
        <param-value>org.postgresql.Driver</param-value>
    </context-param>

    <context-param>
        <param-name>url</param-name>
        <param-value>jdbc:postgresql://127.0.0.1:5432/hospital</param-value>
    </context-param>

    <context-param>
        <param-name>userName</param-name>
        <param-value>user</param-value>
    </context-param>

    <context-param>
        <param-name>password</param-name>
        <param-value>password</param-value>
    </context-param>

    <context-param>
        <param-name>maxConn</param-name>
        <param-value>5</param-value>
    </context-param>

    <context-param>
        <param-name>actionClasses</param-name>
        <param-value>
            com.epam.hospital.web.action.PatientAction
        </param-value>
    </context-param>

</web-app>
